<head>
	<%= stylesheet_link_tag('application', :media => 'all') %>
</head>
<br>

<div align="center" class="forms">
  <%= simple_form_for(:user, url: login_path) do |u|%>

    <table summary="Page form fields">
      <tr>
        <th>Email</th>
        <td><%= u.text_field(:email, :id => "lemail")%></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= u.password_field(:password, :id => "lpassword")%></td>
      </tr>
    </table>

    <div class="form-buttons">
			<button type="button" id="lbutton">Login</button>
    </div>

  <% end %>
	<button type="button" id="backtoggle" onclick="togglelogin()">Minimize</button>
  <%= link_to "Back", root_path%>
</div>
