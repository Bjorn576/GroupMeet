<div align="center" class="forms">
  <%= simple_form_for(:user, url: login_path, html: {id: :loginform}) do |u|%>

    <table summary="Page form fields">
      <tr>
        <th>Email</th>
        <td><%= u.text_field(:email, :id => "lemail")%></td>
      </tr>
      <tr>
        <th>Password</th>
        <td><%= u.password_field(:password, :id => "lpassword")%></td>
				<td><%= u.submit "Login" %></td>
      </tr>
    </table>

    <div class="form-buttons">
			
    </div>

  <% end %>
